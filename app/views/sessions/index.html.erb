<div class="jumbotron">
  <div class="row">
    <div class="col-md-3 col-sm-4 col-md-offset-2 col-sm-offset-1">
      <h2>Sign in</h2>
      <div>
        <% if Rails.application.config.devise.omniauth_providers.include?(:google_oauth2) %>
        <p>
          <%= button_to user_google_oauth2_omniauth_authorize_path, :class=> "btn btn-block btn-social btn-google" do %>
            <%= content_tag(:span, "", :class => "fab fa-google") %> Sign in with Google
          <% end %>
        </p>
        <% end %>

        <% if Rails.application.config.devise.omniauth_providers.include?(:keycloak_openid) %>
        <p>
          <%= button_to user_keycloakopenid_omniauth_authorize_path, :class=> "btn btn-block btn-social btn-openid" do %>
            <%= content_tag(:span, "", :class => "fab fa-openid") %> Sign in with OpenId
          <% end %>
        </p>
        <% end %>

      </div>
      <hr/>
      <div ng-controller="LoginCtrl">
        <h4>Sign in via email:</h4>
        <%= form_with model: @user, url: users_login_path, id: 'login', html: { method: :post } do |f| %>

          <div class="form-group">
            <%= f.text_field :email, class: 'form-control email', placeholder: 'Email Address' %>
          </div>

          <div class="form-group">
             <%= f.password_field :password, class: 'form-control password', placeholder: 'Password' %>
          </div>
          <div>
            <a href='/users/password/new' target="_self">Forgot Password?</a>
          </div>
          <br/>
          <%= f.submit 'Sign in', class: 'btn btn-default login' %>
          <br/>

        <% end %>
      </div>
    </div>

    <div class="col-md-1 or-block col-sm-2" ng-show="isSignupEnabled">
      <h2>OR</h2>
    </div>

    <div class="col-md-3 col-sm-4" ng-show="isSignupEnabled">
      <div ng-controller="SignupCtrl" ng-cloak>
        <%= form_for(@user, url: users_signup_path, id: 'signup', html: { method: :post }) do |f| %>

          <h2>Sign up to get started!</h2>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(resource.errors.count, "error") %> prohibited this invitation from being processed:</h2>

              <% resource.errors.full_messages.each do |message| %>
              <div class="alert alert-danger">
                <%= message %>
              </div>
              <% end %>
            </div>
          <% end %>
          <div class="form-group">
             <%= f.text_field :name, class: 'form-control name', placeholder: 'Full Name' %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, class: 'form-control email', placeholder: 'Email Address' %>
          </div>

          <div class="form-group">
             <%= f.password_field :password, class: 'form-control password', placeholder: 'Password' %>
          </div>

          <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control password-confirm', placeholder: 'Confirm Password' %>
          </div>

          <% if Rails.application.config.terms_and_conditions_url.size > 0 %>
          <div class="checkbox">
            <label>
              <%= f.check_box :agreed %>
              Agree to
              <a ng-href="{{ termsAndConditionsUrl }}" target="_blank">terms &amp; conditions</a>?
            </label>
          </div>
          <% end %>

          <% if Rails.application.config.email_marketing_mode %>
          <div class="checkbox">
            <label>
              <%= f.check_box :email_marketing %>
              Click here to receive occasional news about relevance tuning with Quepid (including new features). You can unsubscribe at any time.
            </label>
          </div>
          <% end %>

          <%= f.submit 'Sign up', class: 'btn btn-primary signup' %>

        <% end %>
      </div>
    </div>
  </div>

  <div class="row m-t-20">
    <div class="col-md-8 col-md-offset-2">
      <p>
        <a href="http://www.opensourceconnections.com/2013/10/07/quepid-give-your-search-queries-some-love/">Read more</a> about the Quepid story. <a href="mailto:TalkToUs@opensourceconnections.com">Contact us</a>
        to talk about Quepid or ask how we can help with your search problems!
      </p>
    </div>
  </div>
</div>
